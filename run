#!/bin/bash

set -e

echo "======================================="
echo "üîç Checking for dependencies..."
echo "======================================="

mkdir -p external

# GLFW
if [ ! -d external/glfw ]; then
    echo "‚Üí Cloning GLFW..."
    git clone https://github.com/glfw/glfw.git external/glfw
else
    echo "‚úì GLFW found"
fi

# GLM
if [ ! -d external/glm ]; then
    echo "‚Üí Cloning GLM..."
    git clone https://github.com/g-truc/glm.git external/glm
else
    echo "‚úì GLM found"
fi

# GLAD
if [ ! -d external/glad ]; then
    echo "‚Üí Cloning GLAD..."
    git clone https://github.com/Dav1dde/glad.git external/glad
    echo "‚Üí Running glad generator (OpenGL C 3.3 compatibility)..."
    cd external/glad
    python3 -m glad --out-path ./GL --api gl:compatibility=3.3 c
    cd ../..
else
    echo "‚úì GLAD found"
fi

echo "======================================="
echo "üì¶ Configuring build..."
echo "======================================="

mkdir -p build
cd build

CMAKE_FLAGS=""
if [ "$1" == "-d" ]; then
    echo "‚öôÔ∏è  Debug mode enabled"
    CMAKE_FLAGS='-DCMAKE_CXX_FLAGS="-DDEBUG"'
fi

cmake .. $CMAKE_FLAGS

echo "======================================="
echo "üî® Building project..."
echo "======================================="

make

echo "======================================="
echo "üöö Moving binary to src/..."
echo "======================================="

# Set your actual binary name here
BINARY_NAME="practise"

if [ -f "./bin/$BINARY_NAME" ]; then
    mv "./bin/$BINARY_NAME" ../src/
    echo "‚úì Moved $BINARY_NAME to src/"
else
    echo "‚úó Build did not produce expected binary: $BINARY_NAME"
    exit 1
fi

echo "======================================="
echo "‚úÖ Done! Run it via ./src/$BINARY_NAME"
echo "======================================="
